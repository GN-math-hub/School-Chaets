    <script>
        // Toggle the Hulu-style search
        function toggleSearch(show) {
            const overlay = document.getElementById('searchOverlay');
            overlay.className = show ? 'search-overlay active' : 'search-overlay';
            if(show) {
                setTimeout(() => document.getElementById('hugeSearch').focus(), 100);
            }
        }

        // Simple "AI" Update simulation
        // In a real app, this would fetch from an API
        function updateAIRecommendations() {
