  <script>
    // API Setup
    const API_KEY = '3a73619bbb8fc6d47742d1b5b2b707b5';
    const baseURL = 'https://api.themoviedb.org/3';
    const FALLBACK_POSTER = 'https://via.placeholder.com/300x450/1a1a1a/666?text=No+Poster';

    // Elements
    const searchInput = document.getElementById('searchInput');
    const ratingSelect = document.getElementById('ratingSelect');
    const categoriesContainer = document.getElementById('categoriesContainer');
    const searchResults = document.getElementById('searchResults');
    const searchResultsRow = document.getElementById('searchResultsRow');
    const modal = document.getElementById('modal');
    const modalTitle = document.getElementById('modalTitle');
    const modalRating = document.getElementById('modalRating');
    const modalIframe = document.getElementById('modalIframe');
    const sourceSelect = document.getElementById('sourceSelect');
    const seasonSelect = document.getElementById('seasonSelect');
    const episodeSelect = document.getElementById('episodeSelect');

    let currentItem = null;

    // Disclaimer countdown
    const agreeBtn = document.getElementById('agreeBtn');
    let countdown = 5;
    const timer = setInterval(() => {
      countdown--;
      agreeBtn.textContent = `I agree with (${countdown})`;
      if (countdown <= 0) {
        clearInterval(timer);
        agreeBtn.classList.add('enabled');
        agreeBtn.textContent = 'I agree';
        agreeBtn.onclick = () => {
          document.getElementById('disclaimerOverlay').style.display = 'none';
        };
      }
    }, 1000);

    // Scroll row function
    function scrollRow(rowId, direction) {
      const row = document.getElementById(rowId);
      const scrollAmount = row.clientWidth * 0.8;
      row.scrollBy({ left: direction * scrollAmount, behavior: 'smooth' });
    }

    // Sources
    function getTvSources(id, season, episode) {
      return [
        `https://player.vidify.top/embed/tv/${id}/${season}/${episode}?autoplay=false&poster=true`,
        `https://vidsrc.xyz/embed/tv?tmdb=${id}&season=${season}&episode=${episode}`,
        `https://player.vidsrc.co/embed/tv/${id}/${season}/${episode}`,
        `https://vidlink.pro/tv/${id}/${season}/${episode}?autoplay=false`
      ];
    }

    function getMovieSources(id) {
      return [
        `https://player.vidify.top/embed/movie/${id}?autoplay=false&poster=true`,
        `https://vidsrc.xyz/embed/movie?tmdb=${id}`,
        `https://player.vidsrc.co/embed/movie/${id}`,
        `https://vidlink.pro/movie/${id}?autoplay=true`
      ];
    }

    // Rating helpers
    async function getCertification(item) {
      try {
        if (item.media_type === 'tv' || item.first_air_date) {
          const res = await fetch(`${baseURL}/tv/${item.id}/content_ratings?api_key=${API_KEY}`);
          const data = await res.json();
          const us = data.results?.find(r => r.iso_3166_1 === 'US');
          return us?.rating || 'NR';
        } else {
          const res = await fetch(`${baseURL}/movie/${item.id}/release_dates?api_key=${API_KEY}`);
          const data = await res.json();
          const us = data.results?.find(r => r.iso_3166_1 === 'US');
          return us?.release_dates?.[0]?.certification || 'NR';
        }
      } catch (e) { return 'NR'; }
    }

    function certMatchesGroup(cert, group) {
      if (group === 'all') return true;
      cert = (cert || '').toUpperCase();
      if (group === 'gpg') return ['G','PG','TV-Y','TV-G','TV-Y7'].includes(cert);
      if (group === 'pg13') return cert === 'PG-13' || cert === 'TV-14';
      if (group === 'r') return cert === 'R' || cert === 'TV-MA';
      if (group === 'nc17') return cert === 'NC-17' || !['G','PG','PG-13','R','TV-14','TV-MA'].includes(cert);
      return false;
    }

    // Create card
    function createCard(item, container) {
      const cert = item._cert || 'NR';
      const card = document.createElement('div');
      card.className = 'card';
      card.onclick = () => openModal(item);
      
      const imgPath = item.poster_path 
        ? `https://image.tmdb.org/t/p/w300${item.poster_path}`
        : FALLBACK_POSTER;
      
      card.innerHTML = `
        <img src="${imgPath}" alt="${item.title || item.name}" loading="lazy">
        <div class="card-overlay">
          <div class="card-title">${item.title || item.name}</div>
          <div class="card-rating">★ ${(item.vote_average || 0).toFixed(1)} • ${cert}</div>
        </div>
      `;
      
      container.appendChild(card);
    }

    // Load data
    async function loadCategory(endpoint, containerId, type) {
      try {
        const res = await fetch(`${baseURL}${endpoint}?api_key=${API_KEY}&language=en-US`);
        const data = await res.json();
        const container = document.getElementById(containerId);
        container.innerHTML = '';
        
        const items = (data.results || []).slice(0, 20);
        for (let item of items) {
          item.media_type = type;
          item._cert = await getCertification(item);
          createCard(item, container);
        }
      } catch (e) { console.error(e); }
    }

    // Search
    async function performSearch(query) {
      if (!query.trim()) {
        categoriesContainer.style.display = 'block';
        searchResults.style.display = 'none';
        return;
      }
      
      categoriesContainer.style.display = 'none';
      searchResults.style.display = 'block';
      searchResultsRow.innerHTML = '';
      
      try {
        const res = await fetch(`${baseURL}/search/multi?api_key=${API_KEY}&query=${encodeURIComponent(query)}`);
        const data = await res.json();
        const filtered = (data.results || []).filter(item => item.media_type === 'movie' || item.media_type === 'tv');
        
        for (let item of filtered.slice(0, 24)) {
          item._cert = await getCertification(item);
          if (certMatchesGroup(item._cert, ratingSelect.value)) {
            createCard(item, searchResultsRow);
          }
        }
      } catch (e) { console.error(e); }
    }

    // Modal functions
    function openModal(item) {
      currentItem = item;
      modal.style.display = 'flex';
      modalTitle.textContent = item.title || item.name;
      modalRating.textContent = item._cert || 'NR';
      seasonSelect.style.display = 'none';
      episodeSelect.style.display = 'none';
      sourceSelect.innerHTML = '';

      if (item.media_type === 'tv' || item.first_air_date) {
        fetch(`${baseURL}/tv/${item.id}?api_key=${API_KEY}`)
          .then(r => r.json())
          .then(data => {
            const seasons = (data.seasons || []).filter(s => s.season_number > 0);
            seasonSelect.innerHTML = seasons.map(s => 
              `<option value="${s.season_number}">${s.name}</option>`
            ).join('');
            
            if (seasons.length) {
              seasonSelect.style.display = 'block';
              seasonSelect.onchange = () => loadEpisodes(item.id, seasonSelect.value);
              seasonSelect.value = 1;
              seasonSelect.dispatchEvent(new Event('change'));
            }
          });
      } else {
        const sources = getMovieSources(item.id);
        sourceSelect.innerHTML = sources.map((s, i) => 
          `<option value="${s}">Source ${i + 1}</option>`
        ).join('');
        if (sources.length) {
          sourceSelect.selectedIndex = 0;
          modalIframe.src = sources[0];
        }
      }
      
      sourceSelect.onchange = () => modalIframe.src = sourceSelect.value;
    }

    function loadEpisodes(tvId, seasonNum) {
      fetch(`${baseURL}/tv/${tvId}/season/${seasonNum}?api_key=${API_KEY}`)
        .then(r => r.json())
        .then(data => {
          const eps = data.episodes || [];
          episodeSelect.innerHTML = eps.map(e => 
            `<option value="${e.episode_number}">E${e.episode_number}: ${e.name}</option>`
          ).join('');
          
          if (eps.length) {
            episodeSelect.style.display = 'block';
            episodeSelect.onchange = () => updateTvSources(tvId, seasonNum, episodeSelect.value);
            episodeSelect.value = 1;
            episodeSelect.dispatchEvent(new Event('change'));
          }
        });
    }

    function updateTvSources(id, season, episode) {
      const sources = getTvSources(id, season, episode);
      sourceSelect.innerHTML = sources.map((s, i) => 
        `<option value="${s}">Source ${i + 1}</option>`
      ).join('');
      sourceSelect.selectedIndex = 0;
      modalIframe.src = sources[0];
    }

    document.getElementById('closeModal').onclick = () => {
      modal.style.display = 'none';
      modalIframe.src = '';
    };

    // Event listeners
    let searchTimeout;
    searchInput.addEventListener('input', (e) => {
      clearTimeout(searchTimeout);
      searchTimeout = setTimeout(() => performSearch(e.target.value), 500);
    });

    ratingSelect.addEventListener('change', () => {
      if (searchInput.value) performSearch(searchInput.value);
    });

    // Keyboard shortcuts
    document.addEventListener('keydown', (e) => {
      if (e.key === '/' && document.activeElement !== searchInput) {
        e.preventDefault();
        searchInput.focus();
      }
      if (e.key === 'Escape') {
        modal.style.display = 'none';
        modalIframe.src = '';
      }
    });

    // Initial load
    loadCategory('/movie/popular', 'popularMovies', 'movie');
    loadCategory('/tv/popular', 'popularTv', 'tv');
    loadCategory('/trending/all/day', 'trending', 'movie');
  </script>
</body>
</html>
